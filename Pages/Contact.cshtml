@page
@model ContactModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Contact Us - Mighty Burger</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        .contact-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }
        .contact-info {
            background: #f8f8f8;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .contact-form {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        }
        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        button {
            background: #ff6600;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .map-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="contact-container">
        <h1>Contact Us</h1>

        <div class="contact-info">
            <h3>Mighty Burger</h3>
            <p><strong>Address:</strong> 123 Burger Street, Shrewsbury, UK</p>
            <p><strong>Phone:</strong> +44 1234 567890</p>
            <p><strong>Email:</strong> contact@mightyburger.co.uk</p>
            <p><strong>Opening Hours:</strong> Mon-Sat: 11 AM - 10 PM | Sun: 12 PM - 8 PM</p>
        </div>

        <div class="contact-form">
            <h2>Send Us a Message</h2>
            <form method="post">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
                <textarea name="message" placeholder="Your Message" rows="5" required></textarea>
                <button type="submit">Send Message</button>
            </form>
        </div>

        <div class="map-container">
            <h2>Find Us</h2>
            <iframe width="100%"
                    height="300"
                    frameborder="0"
                    style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?q=Shrewsbury+UK&key=YOUR_GOOGLE_MAPS_API_KEY"
                    allowfullscreen>
            </iframe>
        </div>
    </div>
</body>
</html>
