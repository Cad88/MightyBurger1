@page
@model MightyBurger.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h2>Our Menu</h2>

<!-- Search Form -->
<form method="get">
    <input type="text" name="SearchQuery" value="@Model.SearchQuery" placeholder="Search menu..." />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MenuItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>£@item.Price.ToString("F2")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" width="100">
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
