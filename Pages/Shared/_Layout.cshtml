<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mighty Burger</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/Menu">Menu</a></li>
                <li><a asp-page="/Contact">Contact</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-area="Identity" asp-page="/Account/Manage">Hello, @User.Identity.Name!</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                }
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody() <!-- This is where each page’s content goes -->
    </main>

    <footer>
        <p>&copy; 2025 Mighty Burger</p>
        <a href="https://validator.w3.org/#validate_by_uri">Validate HTML</a>
        <a href="https://jigsaw.w3.org/css-validator/">Validate CSS</a>
    </footer>

    @RenderSection("Scripts", required: false) <!-- This fixes the login page error -->
</body>
</html>
